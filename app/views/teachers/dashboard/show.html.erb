<h2 class="center">Teacher Profile</h2><br><br>
<div class="container gray bottom-radius padding">
  <div class="row center-it-all">
    <%= form_with model: @teacher, method: :post, local: true do |f| %>
      <h5><%= f.label :class_room, 'Class Room:' %></h5>
      <%= f.select :class_room, ['Butterfly Room', 'Zebra Room'], class: "form-custom center-it-all" %>
      <br><br>

      <h5><%= f.label :first_name, 'First Name:' %></h5>
      <%= f.text_field :first_name, value: params[:first_name], id: :first_name, class: "form-custom center-it-all" %>

      <br><br>

      <h5><%= f.label :last_name, 'Last Name::' %></h5>
      <%= f.text_field :last_name, value: params[:last_name], id: :last_name, class: "form-custom center-it-all" %>

      <br><br>

      <h5><%= f.label :email, 'Email' %></h5>
      <%= f.text_field :email, value: params[:email], readonly: true, id: :email, class: "form-custom center-it-all" %>

      <br><br>

      <h5><%= f.label :phone_number, 'Phone Number:' %></h5>
      <%= f.text_field :phone_number, id: :phone_number, class: "form-custom center-it-all" %>

      <br><br>

      <h5><%= f.label :address, 'Address:' %></h5>
      <%= f.text_area :address, cols: 40, id: :address, class: "form-custom center-it-all" %>

      <br><br>

      <%= f.submit 'Edit Profile', class: "btn btn-sm btn-white button-bg btn-outline-dark" %>
    <% end %>
  </div>
</div>
